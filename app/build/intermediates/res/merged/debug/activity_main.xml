<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:background="@drawable/classical_music">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:text="@string/app_description"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:background="@drawable/shape"
        android:textColor="@android:color/white"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/search_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_88"
            android:layout_weight="1"
            android:text="@string/search"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="ButtonStyle"
            android:padding="2dp"/>

        <Button
            android:id="@+id/songs_button_main"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_88"
            android:layout_weight="1"
            android:text="@string/all_songs"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:padding="2dp"/>

        <Button
            android:id="@+id/artist_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_88"
            android:layout_weight="1"
            android:text="@string/artists"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:padding="2dp"/>

        <Button
            android:id="@+id/types_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_88"
            android:layout_weight="1"
            android:text="@string/song_types"
            android:background="@drawable/shape"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:padding="2dp"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_44"
            android:text="@string/shuffle_play"
            android:layout_gravity="center"
            android:background="@android:color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/myGreen"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/shuffle"
            android:gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/height_44"
        android:background="@color/backgroundGray">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/backgroundGray"
            android:padding="8dp"
            android:src="@drawable/refresh" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/backgroundGray"
            android:padding="8dp"
            android:src="@drawable/last" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/backgroundGray"
            android:padding="8dp"
            android:src="@drawable/play" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/backgroundGray"
            android:padding="8dp"
            android:src="@drawable/next" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/backgroundGray"
            android:padding="8dp"
            android:src="@drawable/suffle_option" />
    </LinearLayout>
</LinearLayout>
